{
    movespeed = 0;
    sprite_index = spr_sloth_minion_attack
}
// Idle Animation
if distance_to_object(obj_playerPlaceHolder) &gt; 250
{
    movespeed = 0;
    image_speed = 0;
}

image_xscale = dir;

// Gravity
vsp += grav;

//Horizontal Collision
if (place_meeting(x+hsp,y,par_tilesets))
{
    while(!place_meeting(x+sign(hsp),y,par_tilesets))
    {
        x += sign(hsp);
    }
